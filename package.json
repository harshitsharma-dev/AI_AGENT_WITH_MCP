{
	"name": "arango-server",
	"version": "0.4.4",
	"description": "A Model Context Protocol Server for ArangoDB",
	"type": "module",
	"bin": {
		"arango-server": "./build/index.js"
	},
	"files": [
		"build"
	],
	"scripts": {
		"build": "tsc --project tsconfig.json && chmod +x build/index.js",
		"prepare": "npm run build",
		"watch": "tsc --watch",
		"inspector": "npx @modelcontextprotocol/inspector build/index.js",
		"dev": "tsc --watch",
		"start": "node build/index.js",
		"test": "jest",
		"lint": "eslint . --ext .ts",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"keywords": [
		"arango",
		"arangodb",
		"mcp",
		"model-context-protocol"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ravenwits/mcp-server-arangodb.git"
	},
	"homepage": "https://github.com/ravenwits/mcp-server-arangodb#readme",
	"author": "Alp SarÄ±yer <hi@alpsariyer.dev>",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.0",
		"@types/cors": "^2.8.18",
		"@types/express": "^5.0.2",
		"arangojs": "^9.2.0",
		"axios": "^1.6.7",
		"chromadb": "^2.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0"
	},
	"devDependencies": {
		"@microsoft/fetch-event-source": "^2.0.1",
		"@types/node": "^20.11.24",
		"eventsource": "^4.0.0",
		"node-fetch": "^3.3.2",
		"typescript": "^5.3.3"
	}
}
